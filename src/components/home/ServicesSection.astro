---
import { Image } from "astro:assets";
import servicesData from "@/data/home/services-data";
---

<section class="bg-zinc-900">
  <div
    class="mx-auto max-w-md px-4 py-16 sm:max-w-3xl sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8"
  >
    <h2
      class="mt-2 text-3xl font-extrabold tracking-tight text-white sm:text-4xl"
    >
      Some of the neat services we offer
    </h2>
    <p class="mt-5 max-w-prose text-xl text-gray-300">
      From simple web fronts, to full-fledged apps and ecommerce projects, we
      offer a wide range of services to our individual and business clients.
    </p>
    <div class="mt-12 grid grid-cols-1 gap-16 sm:grid-cols-2 lg:grid-cols-4">
      {
        servicesData.map((e) => (
          <div class="space-y-4">
            <Image
              class="rounded-lg"
              src={e.image}
              alt={`icon`}
              width={1080}
              height={1080}
              quality={80}
            />
            <div class="space-y-2">
              <h3 class="text-center text-xl font-semibold text-white">
                {e.title}
              </h3>
              <p class="text-gray-300">{e.description}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
